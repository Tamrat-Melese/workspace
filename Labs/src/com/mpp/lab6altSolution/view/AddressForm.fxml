<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.mpp.lab6altSolution.controller.AddressFormController"
          alignment="CENTER" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <GridPane alignment="CENTER" hgap="10" GridPane.rowIndex="0" GridPane.columnIndex="0">
        <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label text="Street" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="City" GridPane.columnIndex="2" GridPane.rowIndex="0" />

        <TextField id="" fx:id="tfName" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="tfStreet" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="tfCity" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    </GridPane>
    <GridPane alignment="CENTER" hgap="10" GridPane.rowIndex="1" GridPane.columnIndex="0">
        <Label text="State" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label text="Zip" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <TextField fx:id="tfState" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="tfZip" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </GridPane>
    <HBox alignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="0">
        <Button text="Submit" onAction="#printAddress" />
    </HBox>

    <stylesheets>
        <URL value="@AddressForm.css"/>
    </stylesheets>
</GridPane>