<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.mpp.library.controller.NewBookCopyController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <Label text="Copy Number" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <Label text="Borrow Duration (days)" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="tfCopyNumber" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <TextField fx:id="tfBorrowDuration" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <HBox alignment="BASELINE_RIGHT" GridPane.rowIndex="2" GridPane.columnIndex="1" spacing="10">
        <Button text="Cancel" onAction="#onClickCancel" />
        <Button text="Add" onAction="#onClickAdd"/>
    </HBox>
</GridPane>