<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="CENTER" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
 fx:controller="com.mpp.library.controller.CheckoutBookController">
   <children>
         <GridPane alignment="CENTER" hgap="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <children>
                  <Label text="Member ID" GridPane.rowIndex="1" />
                  <TextField fx:id="txtMemberID" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button text="Search Member" GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#searchMember"/>
                  <Label text="Member" GridPane.rowIndex="2" />
                  <Label text="Name" GridPane.rowIndex="3" />
                  <Text fx:id="txtName" strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="Address" GridPane.rowIndex="4" />
                  <Text fx:id="txtAddress" strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Label text="Checkout Date" GridPane.rowIndex="5" />
                  <Text fx:id="txtCheckoutDate" strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </children>
         </GridPane>
         
         <GridPane alignment="CENTER" hgap="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <children>
               	<Label text="ISBN" GridPane.rowIndex="1" />
                  <TextField fx:id="txtISBN" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button text="Add to Checkout" GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#addToCheckout"/>
            </children>
      	 </GridPane>
      	 <GridPane alignment="CENTER" hgap="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
         <children>
            <TableView prefHeight="200.0" prefWidth="308.0" GridPane.columnIndex="0" GridPane.rowIndex="1" >
              <columns>
                <TableColumn prefWidth="46.0" text="No" />
                <TableColumn prefWidth="104.0" text="Title" />
                <TableColumn prefWidth="75.0" text="ISBN" />
                <TableColumn prefWidth="75.0" text="Due Date" />
              </columns>
            </TableView>
         </children>
      </GridPane>
    <HBox alignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="0">
        <Button text="CheckoutBook" onAction="#checkoutBooks"/>
    </HBox>
   </children>
</GridPane>
