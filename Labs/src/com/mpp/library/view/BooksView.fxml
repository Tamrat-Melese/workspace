<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.mpp.library.controller.BookController"
          alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <TableView fx:id="tableView" GridPane.rowIndex="0" GridPane.columnIndex="0">
        <columns>
            <TableColumn text="ISBN">
                <cellValueFactory>
                    <PropertyValueFactory property="ISBN" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Title">
                <cellValueFactory>
                    <PropertyValueFactory property="title" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Availability">
                <cellValueFactory>
                    <PropertyValueFactory property="availability" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</GridPane>