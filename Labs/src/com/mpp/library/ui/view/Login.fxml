<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.mpp.library.ui.controller.LoginUIController" vgap="10" hgap="10" alignment="CENTER">
    <padding>
        <Insets top="50" right="100" bottom="50" left="100"/>
    </padding>

    <Label id="welcome-text" text="Welcome" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <Label id="login-label" text="Username" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Label id="login-label" text="Password" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="txtUsername" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button defaultButton="true" onAction="#loginUser" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label fx:id= "lblErrorMessage" text="" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <stylesheets>
        <URL value="@application.css" />
    </stylesheets>
</GridPane>